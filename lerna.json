{
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish packages",
      "access": "public",
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "**/*.md",
        "**/test/**",
        "**/tests/**",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/stories/**",
        "**/*.stories.*"
      ]
    },
    "version": {
      "allowBranch": ["main", "master", "release/*"],
      "conventionalCommits": true,
      "message": "chore(release): version packages",
      "push": true
    },
    "bootstrap": {
      "hoist": false,
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "packages": ["packages/*"]
}
