{
  "name": "@bearlab/ui-workspace",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Bearlab UI Component Library Workspace",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@svgr/rollup": "^8.1.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "lerna": "^8.2.3",
    "rollup": "^4.49.0",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.91.0",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "bootstrap": "npm install",
    "install:all": "npm install && npm run build:core",
    "clean": "lerna run clean --parallel",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "build:core": "lerna run build --scope=@bearlab/core",
    "build:alert": "lerna run build --scope=@bearlab/alert",
    "build:components": "lerna run build --ignore=@bearlab/core --stream",
    "build:all": "npm run build:core && lerna run build --stream",
    "build:clean": "./scripts/build.sh --clean",
    "release": "./scripts/publish.sh",
    "release:patch": "./scripts/publish.sh --version patch",
    "release:minor": "./scripts/publish.sh --version minor",
    "release:major": "./scripts/publish.sh --version major",
    "release:changed": "./scripts/publish.sh --changed-only",
    "release:packages": "./scripts/publish.sh --packages",
    "release:dry": "./scripts/publish.sh --dry-run",
    "version:patch": "lerna version patch --conventional-commits --yes",
    "version:minor": "lerna version minor --conventional-commits --yes",
    "version:major": "lerna version major --conventional-commits --yes",
    "test": "lerna run test --parallel",
    "lint": "lerna run lint --parallel",
    "format": "lerna run format --parallel"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
