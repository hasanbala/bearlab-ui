{
  "name": "@bearlab/ui-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Bearlab UI Component Library Workspace",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "lerna": "^8.2.3",
    "rollup": "^4.49.0",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.91.0",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "bootstrap": "npm install",
    "install:all": "npm install && npm run build:core",
    "clean": "lerna run clean --parallel",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "build": "lerna run build --stream",
    "build:all": "npm run build:core && npm run build",
    "build:core": "lerna run build --scope=@bearlab/core",
    "build:components": "lerna run build --ignore=@bearlab/core --stream",
    "build:clean": "./scripts/build.sh --clean",
    "build:parallel": "./scripts/build.sh --parallel",
    "build:selective": "./scripts/build.sh",
    "build:button": "lerna run build --scope=@bearlab/button",
    "build:badge": "lerna run build --scope=@bearlab/badge",
    "build:checkbox": "lerna run build --scope=@bearlab/checkbox",
    "build:copy": "lerna run build --scope=@bearlab/copy",
    "build:dropdown": "lerna run build --scope=@bearlab/dropdown",
    "build:dropzone": "lerna run build --scope=@bearlab/dropzone",
    "build:file-input": "lerna run build --scope=@bearlab/file-input",
    "build:go-back": "lerna run build --scope=@bearlab/go-back",
    "build:hooks": "lerna run build --scope=@bearlab/hooks",
    "build:input": "lerna run build --scope=@bearlab/input",
    "build:loading": "lerna run build --scope=@bearlab/loading",
    "build:otp-form": "lerna run build --scope=@bearlab/otp-form",
    "build:radio": "lerna run build --scope=@bearlab/radio",
    "build:select": "lerna run build --scope=@bearlab/select",
    "build:skeleton": "lerna run build --scope=@bearlab/skeleton",
    "build:switch": "lerna run build --scope=@bearlab/switch",
    "build:table": "lerna run build --scope=@bearlab/table",
    "build:textarea": "lerna run build --scope=@bearlab/textarea",
    "build:view-card": "lerna run build --scope=@bearlab/view-card",
    "build:view-error": "lerna run build --scope=@bearlab/view-error",
    "release": "lerna publish",
    "version:patch": "lerna version patch --conventional-commits",
    "version:minor": "lerna version minor --conventional-commits",
    "version:major": "lerna version major --conventional-commits",
    "publish:ci": "lerna publish from-git --yes",
    "publish:all": "npm run build:all && ./scripts/publish.sh",
    "publish:changed": "npm run build:all && lerna publish --conventional-commits",
    "publish:quick": "npm run build:all && ./scripts/quick-publish.sh -v patch",
    "test": "lerna run test --parallel",
    "lint": "lerna run lint --parallel",
    "format": "lerna run format --parallel"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
